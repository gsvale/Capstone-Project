<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/location_name_tv"
        style="@style/LocationNameWidgetTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Location Name" />

    <TextView
        android:id="@+id/location_address_tv"
        style="@style/LocationAddressWidgetTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Location Address" />

    <TextView
        android:id="@+id/location_opening_tv"
        style="@style/LocationOpeningWidgetTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="OPEN" />


</LinearLayout>